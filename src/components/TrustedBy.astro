---
const { title, description, images } = Astro.props;
---

<div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="grid grid-cols-1 items-center gap-x-8 gap-y-16 lg:grid-cols-2">
            <div class="mx-auto w-full max-w-xl lg:mx-0">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900">{title}</h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">{description}</p>
                <div class="mt-8 flex items-center gap-x-6">
                </div>
            </div>
            <div class="mx-auto grid w-full max-w-xl grid-cols-2 items-center gap-y-12 sm:gap-y-14 lg:mx-0 lg:max-w-none lg:pl-8">
                {images.map(({ src, alt }) => (
                        <img class="max-h-12 w-full object-contain object-left" src={src.photo.replace('public', ''} alt={alt} />
                ))}
            </div>
        </div>
    </div>
</div>
