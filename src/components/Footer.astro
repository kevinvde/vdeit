---
const { year, companyName, socialLinks } = Astro.props;
---

<footer class="bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12 md:flex md:items-center md:justify-between lg:px-8">
        <div class="flex justify-center space-x-6 md:order-2">
            {socialLinks.map(({ href, label, svgPath }) => (
                    <a href={href} class="text-gray-400 hover:text-gray-500" aria-label={label}>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path fill-rule="evenodd" d={svgPath} clip-rule="evenodd" />
                        </svg>
                    </a>
            ))}
        </div>
        <div class="mt-8 md:order-1 md:mt-0">
            <p class="text-center text-xs leading-5 text-gray-500">&copy; {year} {companyName}, Inc. All rights reserved.</p>
        </div>
    </div>
</footer>
