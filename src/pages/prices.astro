---
import Layout from '../layouts/Layout.astro';
import * as data from '../data/pricing.md';
import Faq from "../components/Faq.astro";

import { AstroSeo } from '@astrolib/seo';

---
<AstroSeo
        title={data.frontmatter.seo.title}
        description={data.frontmatter.seo.description}
        canonical={data.frontmatter.seo.canonical}
        openGraph={data.frontmatter.seo.openGraph}
        twitter={{...data.frontmatter.seo.twitter}}
/>

<Layout>
    <div class="relative isolate bg-white px-6 py-24 sm:py-32 lg:px-8">
        <div class="absolute inset-x-0 -top-3 -z-10 transform-gpu overflow-hidden px-36 blur-3xl" aria-hidden="true">
            <div class="mx-auto aspect-[1155/678] w-[72.1875rem] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30" style="clipPath: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
        </div>
        <div class="mx-auto max-w-2xl text-center lg:max-w-4xl">
            <h2 class="text-base font-semibold leading-7 text-indigo-600">{data.frontmatter.title}</h2>
            <p class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">{data.frontmatter.description}</p>
        </div>
        <p class="mx-auto mt-6 max-w-2xl text-center text-lg leading-8 text-gray-600">{data.frontmatter.intro}</p>
        <div class="mx-auto mt-16 grid max-w-lg grid-cols-1 items-center gap-y-6 sm:mt-20 sm:gap-y-0 lg:max-w-4xl lg:grid-cols-2">
            {data.frontmatter.tiers.map(tier => (
                    <div class={
                        tier.id === 'basis'
                            ? 'rounded-3xl rounded-t-3xl bg-white/60 p-8 ring-1 ring-gray-900/10 sm:mx-8 sm:rounded-b-none sm:p-10 lg:mx-0 lg:rounded-bl-3xl lg:rounded-tr-none'
                            : 'relative rounded-3xl bg-gray-900 p-8 shadow-2xl ring-1 ring-gray-900/10 sm:p-10'
                    }>
                        <h3 id={`tier-${tier.id}`} class={`text-base font-semibold leading-7 ${tier.id === 'basis' ? 'text-indigo-600' : 'text-indigo-400'}`}>{tier.name}</h3>
                        <p class="mt-4 flex items-baseline gap-x-2">
                            <span class={`text-5xl font-bold tracking-tight ${tier.id === 'basis' ? 'text-gray-900' : 'text-white'}`}>{tier.price}</span>
                            <span class={`text-base ${tier.id === 'basis' ? 'text-gray-500' : 'text-gray-400'}`}>{tier.price_frequency}</span>
                        </p>
                        <p class={`mt-6 text-base leading-7 ${tier.id === 'basis' ? 'text-gray-600' : 'text-gray-300'}`}>{tier.description}</p>
                        <ul role="list" class={`mt-8 space-y-3 text-sm leading-6 ${tier.id === 'basis' ? 'text-gray-600' : 'text-gray-300'} sm:mt-10`}>
                            {tier.features.map(feature => (
                                    <li class="flex gap-x-3">
                                        <svg class={`h-6 w-5 flex-none ${tier.id === 'basis' ? 'text-indigo-600' : 'text-indigo-400'}`} viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                                        </svg>
                                        {feature}
                                    </li>
                            ))}
                        </ul>
                        <a href={tier.cta_link} aria-describedby={`tier-${tier.id}`} class={`mt-8 block rounded-md px-3.5 py-2.5 text-center text-sm font-semibold ${tier.id === 'basis' ? 'text-indigo-600 ring-1 ring-inset ring-indigo-200 hover:ring-indigo-300' : 'bg-indigo-500 text-white shadow-sm hover:bg-indigo-400'} focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 ${tier.id === 'basis' ? 'focus-visible:outline-indigo-600' : 'focus-visible:outline-indigo-500'} sm:mt-10`}>
                            {tier.cta_text}
                        </a>
                    </div>
            ))}
        </div>
        <div class="mx-auto max-w-2xl lg:max-w-4xl mt-6 text-xs">
            * Prijzen zijn exclusief BTW, domein, hosting.
        </>

        <Faq></Faq>
    </div>
</Layout>
